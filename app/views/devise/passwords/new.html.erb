<div class="devise_container">

<h2>Forgot your password?</h2>
	<div class="devise_forms">

		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div><%= f.label(:email, "Enter your email to receive password reset instructions") %><br>
		  <%= f.email_field :email, :autofocus => true %></div><br>

		  <div><%= f.submit "Reset password", class: "btn btn-primary" %></div><br>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
