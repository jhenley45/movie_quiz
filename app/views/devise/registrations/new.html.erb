<div class="devise_container">
<h2>Sign up</h2>
  <div class="devise_forms">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true %></div><br>

      <div><%= f.label(:username, "Username: (this will display on the leaderboard)") %><br />
      <%= f.text_field :username %></div><br>

      <div><%= f.label :password %><br />
      <%= f.password_field :password %></div><br>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %></div><br>

      <div><%= f.submit "Sign up", class: "btn btn-primary" %></div><br>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
